<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".popup_info_activity"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="30sp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:text="SRC"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="16dp"
            android:id="@+id/src_station_name_text_box"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="DEST"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textSize="30sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:id="@+id/dest_station_name_text_box"
            android:layout_marginBottom="16dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/ic_keyboard_backspace_black_24dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/other_toolbar_Back_Button"
            android:onClick="onClick"
            android:id="@+id/back_btn_popup_info"
            />
    </LinearLayout>

</ScrollView>